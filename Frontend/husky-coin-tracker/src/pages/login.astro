---
import { login } from "../scripts/pocket";

let error = null;

if (Astro.request.method === 'POST') {
    try {
        const data = await Astro.request.formData();
        const email = data.get("email");
        const password = data.get("password");

        if (!email || !password) {
            error = "Missing fields! Try again...";
        } else {
            const cookie = await login(
            email.toString(),
            password.toString(),
            );
            Astro.locals.pb.authStore.loadFromCookie(cookie)
            if (Astro.locals.pb.authStore.isValid) {
                Astro.request.headers.append("Set-Cookie", cookie);
                return Astro.redirect('/');
            } 
            error = "Invalid credentials...";
        }
    } catch (e) {
        console.error(e);
        error = "An error occurred during login...";
    }
}

if (Astro.locals.pb.authStore.isValid) {
  return Astro.redirect('/');
}
---
<html>
    <head>
        <title>Login Page</title>
    </head>
    <body class="bg-gray-100 flex items-center justify-center h-screen">
        <main class="w-full max-w-sm m-auto bg-white rounded-lg border border-primaryBorder shadow-default py-10 px-16">
            <h1 class="text-2xl font-medium text-primary mt-4 text-center">
                Log into
            </h1>
            <h1 class="text-2xl font-medium text-primary text-center">
                Husky Coin Tracker
            </h1>
            <img
                src="https://a.espncdn.com/combiner/i?img=/i/teamlogos/ncaa/500/111.png"
                alt="Husky Coin Tracker Logo"
                class="mx-auto h-20 w-auto mt-2 mb-4"
            />
            <p class="text-center flex flex-col mb-4">
                Don't have an account? 
                <a href="/signup" class="text-blue-500 hover:text-blue-700">Sign up here!</a>
            </p>
            <form method="post" accept-charset="UTF-8">
                <input 
                    type="text" 
                    name="email" 
                    placeholder="Email" 
                    class="w-full p-2 text-primary border rounded-md outline-none text-sm transition duration-150 ease-in-out mb-4"
                >
                <input 
                    type="password" 
                    name="password" 
                    placeholder="Password" 
                    class="w-full p-2 text-primary border rounded-md outline-none text-sm transition duration-150 ease-in-out mb-4"
                >
                <input 
                    type="submit" 
                    value="Login" 
                    class="w-full py-2 rounded-md bg-red-600 text-white text-lg focus:outline-none cursor-pointer"
                >
                {error ? <p class="text-red-500 text-xs italic mt-4">{error}</p> : null}
            </form>
        </main>
    </body>
</html>